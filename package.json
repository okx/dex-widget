{
    "name": "okxweb3",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev": "pnpm --parallel --filter @okxweb3/web3 build && pnpm --filter @okxweb3/dex-widget build:watch & pnpm --filter @okxweb3/widget-configurator dev",
        "clean": "pnpm -r exec rimraf dist node_modules .eslintcache && rimraf node_modules",
        "build": "pnpm build:web3 && pnpm build:lib && pnpm build:demo",
        "build:lib": "pnpm --filter @okxweb3/dex-widget build",
        "build:web3": "pnpm --filter @okxweb3/web3 build",
        "build:demo": "pnpm --filter @okxweb3/widget-configurator build",
        "lint": "eslint --config .eslintrc . --cache --debug",
        "lint:fix": "eslint --fix .",
        "prettier": "prettier --ignore-path .gitignore --write \"**/*.{ts,js,md,json}\""
    },
    "devDependencies": {
        "@eslint/js": "^9.9.0",
        "@types/node": "^22.1.0",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "5.53.0",
        "@typescript-eslint/parser": "5.53.0",
        "@vitejs/plugin-react": "^4.3.1",
        "chokidar": "^3.6.0",
        "eslint": "^7.29.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-import": "2.24.1",
        "eslint-plugin-no-only-tests": "3.0.0",
        "eslint-plugin-prettier": "3.4.0",
        "eslint-plugin-react-hooks": "^5.1.0-rc.0",
        "eslint-plugin-react-refresh": "^0.4.9",
        "globals": "^15.9.0",
        "less": "^4.2.0",
        "prettier": "2.4.1",
        "rimraf": "^6.0.1",
        "standard-version": "^9.5.0",
        "typescript": "~4.7.4",
        "typescript-eslint": "^8.0.1",
        "vite": "^5.3.1",
        "vite-plugin-dts": "^4.0.1",
        "vite-plugin-node-polyfills": "^0.22.0"
    },
    "dependencies": {
        "@rainbow-me/rainbowkit": "^2.1.4",
        "@tanstack/react-query": "^5.51.21",
        "buffer": "^4.9.2",
        "process": "^0.11.10",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "wagmi": "^2.12.5"
    }
}