{
    "compilerOptions": {
        "jsx": "react",
        "module": "ESNext",
        "target": "ESNext",
        "noImplicitAny": false,
        "allowJs": true,
        "baseUrl": ".",
        "rootDir": "./src",
        "experimentalDecorators": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "declarationDir": "dist",
        "sourceMap": true
    },
    "include": [
        "src"
    ]
}